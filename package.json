{
  "name": "hono-bun-starter",
  "version": "1.0.0",
  "description": "Hono Bun Starter",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist",
    "start": "bun dist/index.js",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "format": "biome format --write ./src",
    "format:check": "biome format ./src",
    "check": "biome check ./src",
    "check:fix": "biome check --write ./src",
    "type-check": "tsc --pretty --noEmit",
    "prepare": "husky",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nirnejak/hono-bun-starter.git"
  },
  "keywords": [
    "Typescript",
    "Bun",
    "Hono",
    "Drizzle"
  ],
  "author": "Jitendra Nirnejak",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nirnejak/hono-bun-starter/issues"
  },
  "homepage": "https://github.com/nirnejak/hono-bun-starter#readme",
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@neondatabase/serverless": "^1.0.2",
    "better-auth": "^1.4.18",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.11.9",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@types/bun": "^1.3.9",
    "drizzle-kit": "^0.31.9",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "biome check --no-errors-on-unmatched"
  },
  "volta": {
    "node": "24.12.0"
  }
}
